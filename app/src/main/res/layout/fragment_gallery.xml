<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D86C3A"
    tools:context=".ui.gallery.GalleryFragment">

    <ImageView
        android:id="@+id/ImgUnsa"
        android:layout_width="181dp"
        android:layout_height="139dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logounsa">

    </ImageView>

    <TextView
        android:id="@+id/txtHistoria"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textStyle="bold"

        android:text="Soy estudiante de Ingenieria de Sistemas UNSA, el presente aplicativo pertenece al curso de Arquitectura de Computadoras">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Anderson Rivera Quispe">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:textStyle="italic"
        android:text="Contacto: ariveraqu@unsa.edu.pe">
    </TextView>




</LinearLayout>